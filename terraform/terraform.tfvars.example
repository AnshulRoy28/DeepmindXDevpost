# ==============================================
# NEURO-SENTINEL Terraform Variables Example
# ==============================================
# Copy this file to terraform.tfvars and fill in your values
# DO NOT commit terraform.tfvars to version control

project_id = "your-gcp-project-id"
region     = "us-central1"

service_name    = "neuro-sentinel-app"
container_image = "us-central1-docker.pkg.dev/your-project/neuro-sentinel-app-repo/app:latest"

min_instances = 0
max_instances = 10
memory_limit  = "512Mi"
cpu_limit     = "1"
port          = 8080

# Secrets mapping: ENV_VAR_NAME = "secret-manager-secret-id"
secrets = {
  # DATABASE_URL = "neuro-sentinel-app-database_url"
  # API_KEY      = "neuro-sentinel-app-api_key"
}
